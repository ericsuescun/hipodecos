<div class="contanier">
  <div class="row">
    <div class="col-sm-8 mx-auto">
      <h1>Admins de Hipodecos</h1>
      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Cellular</th>
            <th>Dirección</th>
            <th>God mode</th>
            <th>Reports only</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @admins.each do |admin| %>
            <tr>
              <td scope="col"><%= admin.name %></td>
              <td><%= admin.email %></td>
              <td><%= admin.tel %></td>
              <td><%= admin.cel %></td>
              <td><%= admin.address %></td>
              <td><%= admin.god_mode %></td>
              <td><%= admin.reports_only %></td>
              <td><%= link_to 'Editar', edit_admin_registration_path(admin) %></td>
              <td><%= link_to "Salir", destroy_admin_session_path, method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Registrar otro Admin', new_admin_registration_path %>
    </div>
  </div>
</div>