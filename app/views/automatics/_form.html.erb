<%= form_with(model: automatic, local: true) do |form| %>
  <%= render "shared/error_messages", target: automatic %>

  <%= form.hidden_field :auto_type, value: automatic.auto_type %>



  <div class="form-group">
    <%= form.label "Título o nombre del automático" %>
    <%= form.text_field :title, class: "form-control input", autofocus: true %>
  </div>

  <div class="form-group">
    <%= form.collection_select(:organ, Organ.all.order(organ: :asc), :organ, :organ, {selected: @selected, include_blank: true, prompt: 'Seleccione órgano'}, { class: "form-control input" }) %>
  </div>

  <div class="actions">
    <%= form.submit "Guardar", class: "btn btn-primary" %>
  </div>

  
<% end %>
