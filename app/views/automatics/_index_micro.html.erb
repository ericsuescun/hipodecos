<h1>Automáticos para micros</h1>
<%= link_to ' + ', automatics_new_micro_path, class: "btn btn-primary mb-3" %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Órgano Ref.</th>
      <th>Título</th>
      <th># opciones</th>
      <th>Por:</th>
      <th>Creación</th>
      <th>Modificación</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% automatics.each do |automatic| %>
      <% if automatic.scripts.count == 0 %>
        <tr class="table-warning">
          <td><%= automatic.organ.upcase %></td>
          <td><%= link_to automatic.title.upcase, automatic %></td>
          <td><%= automatic.scripts.count %></td>
          <td><%= User.find(automatic.user_id).initials %></td>
          <td><%= automatic.created_at.strftime('%d/%m/%Y') %></td>
          <td><%= automatic.updated_at.strftime('%d/%m/%Y') %></td>
          <td><%= link_to 'Editar', edit_automatic_path(automatic) %></td>
          <td><%= link_to 'Borrar', automatic, method: :delete, data: { confirm: '¿Confirmas la operación?' } %></td>
        </tr>
      <% else %>
        <tr>
          <td><%= automatic.organ.upcase %></td>
          <td><%= link_to automatic.title.upcase, automatic %></td>
          <td><%= automatic.scripts.count %></td>
          <td><%= User.find(automatic.user_id).initials %></td>
          <td><%= automatic.created_at.strftime('%d/%m/%Y') %></td>
          <td><%= automatic.updated_at.strftime('%d/%m/%Y') %></td>
          <td><%= link_to 'Editar', edit_automatic_path(automatic) %></td>
          <td><%= link_to 'Borrar', automatic, method: :delete, data: { confirm: '¿Confirmas la operación?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>