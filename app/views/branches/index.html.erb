<div class="container-fluid">
  <div class="row">
    <div class="col-12 col-lg-12 mx-auto">

      <h1>Sedes IPS</h1>

      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th>IPS Pirncipal</th>
            <th>Nombre</th>
            <th>Siglas</th>
            <th>Código</th>
            <th>Contacto</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Celular</th>
            <th>Municipio</th>
            <th>Departamento</th>
            <th>Dirección</th>
            <th>Tipo de IPS</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @branches.each do |branch| %>
            <tr>
              <td><%= branch.entity.name %></td>
              <td><%= branch.name %></td>
              <td><%= branch.initials %></td>
              <td><%= branch.code %></td>
              <td><%= branch.mgr_name %></td>
              <td><%= branch.mgr_email %></td>
              <td><%= branch.mgr_tel %></td>
              <td><%= branch.mgr_cel %></td>
              <td><%= branch.municipality %></td>
              <td><%= branch.department %></td>
              <td><%= branch.address %></td>
              <td><%= branch.entype %></td>
              <td><%= link_to 'Editar', edit_branch_path(branch) %></td>
              <td><%= link_to 'Borrar', branch, method: :delete, data: { confirm: '¿Confirmas la operación?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Crear sede', new_branch_path %>

      <br>

    </div>
  </div>
</div>
