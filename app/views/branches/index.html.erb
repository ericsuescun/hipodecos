<div class="container-fluid">
  <div class="row">
    <div class="col-12 col-lg-12 mx-auto">

      <h1>Sedes IPS</h1>

      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Código</th>
            <th>IPS</th>
            <th>Sede</th>
            <th>Informes</th>
            <th>Cups</th>
            <th>Costo</th>
            <th>Facturación</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @branches.each do |branch| %>
            <tr>
              <td><%= branch.code %></td>
              <td><%= branch.entity.initials %></td>
              <td><%= branch.initials %></td>
              <td><%= infos(branch) %></td>
              <td><%= studs(branch) %></td>
              <td><%= number_to_currency(costos(branch), precision: 0, delimiter: '.') %></td>
              <td><%= number_to_currency(prices(branch), precision: 0, delimiter: '.') %></td>
              <td><%= link_to 'Detalles', branch_path(branch) %></td>
              <td><%= link_to 'Editar', edit_branch_path(branch) %></td>
              <td><%= link_to 'Borrar', branch, method: :delete, data: { confirm: '¿Confirmas la operación?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-12 col-lg-12 mx-auto">
      <h1>Listado de sedes IPS</h1>
      <% @branches.each do |branch| %>

        <div class="card mb-3">
          <div class="row no-gutters">
            <div class="col-lg-8">
              <div class="card-body">
                <h3 class="card-title">IPS <%= branch.entity.name %>, sede <%= branch.initials %></h3>
                <p class="card-text">Gerente: <strong><%= branch.mgr_name %></strong></p>
                <p class="card-text">Email: <strong><%= branch.mgr_email %></strong></p>
                <p class="card-text">Teléfonos: <strong><%= branch.mgr_tel %> - <%= branch.mgr_cel %></strong></p>
                <p class="card-text">Dirección: <strong><%= branch.address %></strong></p>
                <p class="card-text"><small class="text-muted"><%= branch.municipality %>, <%= branch.department %></small></p>
              </div>
            </div>
            <div class="col-12 col-lg-2 mx-auto my-3">
              <br>
              <%= link_to 'Editar', edit_branch_path(branch), class: 'btn btn-primary' %>
              <%= link_to 'Borrar', branch, method: :delete, data: { confirm: '¿Confirmas la operación?' }, class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
