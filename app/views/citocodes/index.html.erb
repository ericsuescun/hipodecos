<div class="container-fluid">
  <div class="row">
    <div class="col-12 col-lg-12 mx-auto">

      <h4>Importar datos</h4>
      <%= form_tag import_citocodes_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag "Importar CSV" %>
      <% end %>

      <h1>Listado de Citodiagnósticos automáticos</h1>
      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Admin</th>
            <th>Cito code</th>
            <th>Description</th>
            <th>Result type</th>
            <th>Score</th>
            <th>Order</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @citocodes.each do |citocode| %>
            <tr>
              <td><%= citocode.admin_id %></td>
              <td><%= citocode.cito_code %></td>
              <td><%= citocode.description %></td>
              <td><%= citocode.result_type %></td>
              <td><%= citocode.score %></td>
              <td><%= citocode.order %></td>
              <td><%= link_to 'Detalles', citocode %></td>
              <td><%= link_to 'Editar', edit_citocode_path(citocode) %></td>
              <td><%= link_to 'Borrar', citocode, method: :delete, data: { confirm: 'Confirmas la operación?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>



<br>

