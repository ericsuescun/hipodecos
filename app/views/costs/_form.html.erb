<div class="container">
  <div class="row">
    <div class="col-12 col-lg-8 mx-auto">
      <%= form_with(model: cost, local: true) do |form| %>
        <div class="form-group">
          <%= form.label "Nombre" %>
          <%= form.text_field :name, class: "form-control form-control-lg input" %>
        </div>

        <div class="form-group">
          <%= form.label "DescripciÃ³n" %>
          <%= form.text_area :description, class: "form-control form-control-lg input" %>
        </div>

        <div class="form-group">
          <%= form.label "Base" %>
          <%= form.select :base, Cost.pluck(:name, :id), {prompt:"Seleccione la tabla de costo base"}, class: "form-control form-control-lg input" %>
        </div>

        <div class="form-group">
          <%= form.label "Aplicar factor (1 si no va a ver cambio)" %>
          <%= form.number_field :factor, step: :any, class: "form-control form-control-lg input" %>
        </div>

        <div class="actions">
          <%= form.submit "Guardar", class: 'btn btn-primary btn-block'%>
        </div>
      <% end %>
      <br>
    </div>
  </div>
</div>
