<div class="container-fluid">
  <div class="row">
    <div class="col-12 col-lg-12 mx-auto">
      <h1>Tablas de costos</h1>
      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Admin</th>
            <th>Fecha de creación</th>
            <th>Fecha de modificación</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @costs.each do |cost| %>
            <tr>
              <td><%= cost.name %></td>
              <td><%= cost.description %></td>
              <td><%= Admin.find(cost.admin_id).name %></td>
              <td><%= cost.created_at.strftime('%d/%m/%Y') %></td>
              <td><%= cost.updated_at.strftime('%d/%m/%Y') %></td>
              <td><%= link_to 'Detalles', cost %></td>
              <td><%= link_to 'Editar', edit_cost_path(cost) %></td>
              <td><%= link_to 'Borrar', cost, method: :delete, data: { confirm: '¿Confirmas la acción?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
