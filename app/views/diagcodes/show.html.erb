<table class="table table-striped">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descripción</th>
      <th>Órgano</th>
    </tr>
  </thead>
  <tbody>
    <% @diagcode.autos.each do |a| %>
      <tr>
        <td><%= a.title %></td>
        <td><%= a.body %></td>
        <td><%= a.param1 %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= form_with model: [@diagcode, @diagcode.autos.build] do |form| %>

    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div class="field">
      <%= form.label :body %>
      <%= form.text_area :body %>
    </div>

    <div class="field">
      <%= form.label :param1 %>
      <%= form.collection_select(:param1, Organ.all, :organ, :organ) %>
    </div>
