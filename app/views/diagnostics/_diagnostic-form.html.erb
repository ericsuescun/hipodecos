<h4>Agregar diagnóstico manual</h4>
<%= form_with model: [inform, inform.diagnostics.build], local: false do |form| %>
  <div class="form-group">
    <%= form.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.collection_select(:pss_code, diagcodes, :pss_code, :description, { prompt: 'Código PSS'}, { class: "form-control input" }) %>
  </div>
  <div class="actions">
    <%= form.submit "Agregar", class: "btn btn-primary mb-3" %>
  </div>
<% end %>