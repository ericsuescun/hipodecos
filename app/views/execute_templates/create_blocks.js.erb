<% if @inform.errors.empty? %>
	$(document).on('page:load', refresh2());
	function refresh2() {

		$('div.recipients').remove();
		$('div.recipient').append('<%= j render "informs/recipients", inform: @inform, automatics: @automatics, recipient: @recipient, edit_sample_tag: "", edit_recipient_tag: "" %>');

	  $('div.blocks').remove();
	  $('div.block').append('<%= j render "informs/blocks", inform: @inform, blocks: @blocks, samplesc: @samplesc, edit_objection_id: nil %>');

	  
	  $('div.fast-bar').append('<%= j render "blocks/ok-message", message: "creados" %>');
	  setTimeout(function() {
	  	$('div.alert-growl').remove();
	  }, 3000);
	}
<% else %>
	$('div.fast-bar').append('<%= j render "blocks/block-error-message", message: "Revisar" %>');
	setTimeout(function() {
		$('div.alert-growl').remove();
	}, 3000);
<% end %>