$(document).on('page:load', refresh());

function refresh() {
	modalMicroClose();

	$('div.micros-out').remove();
	$('div.micros-in').append('<%= j render "micros/micros", inform: @inform, automatics: @automatics, edit_micro: @micro, edit_objection_id: nil, edit_status: false %>');

	$('div.diagnostics-out').remove();
	$('div.diagnostics-in').append('<%= j render "diagnostics/diagnostics", inform: @inform, edit_diagnostic: @diagnostic, diagcodes: @diagcodes, edit_objection_id: nil, edit_dx_status: false %>');

	
	
	setTimeout(function() {
		$('div.alert-growl').remove();
	}, 3000)
}