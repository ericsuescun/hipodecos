<% if @block.errors.empty? %>
	$(document).on('page:load', refresh2());
	function refresh2() {

	  $('a#remove-link-block-<%= @block.block_tag %>').remove();
	  $('td#add-link-block-<%= @block.block_tag %>').append('<%= j render "inclusion_blocks/link-block", block: @block, sample: @sample %>');

	  
	  $('div.fast-bar').append('<%= j render "ok-message", message: "editado" %>');
	  setTimeout(function() {
	  	$('div.alert-growl').remove();
	  }, 3000)
	}
<% end %>