<!-- Modal -->
<div class="modal fade" id="autosMacroModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Autom√°ticos para Macro</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="container">

        <div class="row">
          <div class="d-flex flex-row">
            <% automatics.each do |automatic| %>
              <% if automatic.organ != "" %>
                <%= form_with url: execute_templates_create_path, method: "get" do |form| %>
                  <div class="actions">
                    <%= form.submit automatic.title, class: "organ-Digestivo mb-2" %>
                    <%= form.hidden_field :inform_id, value: inform.id %>
                    <%= form.hidden_field :automatic, value: automatic.id %>
                  </div>
                <% end %>
              <% end %>  
            <% end %>
          </div>
        </div>

      </div>

      
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>