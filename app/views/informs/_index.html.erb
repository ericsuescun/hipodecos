<div class="container-fluid">
  <h3><%= @informs.count %> de <%= Inform.count %> informes encontrados <%= new_search_range %></h3>
  <div class="row">
    <div class="col-12 col-lg-12 mx-auto">
      <h4>Informes <%= search_range %></h4>
      <div class="digg_pagination mb-3">
        </div>
      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Informe</th>
            <th>Tipo</th>
            <th>Ingreso PSS</th>
            <th>User PSS</th>
            <th>Paciente</th>
            <th>EPS</th>
            <th>Sede IPS</th>
            <th>Código Authoriz.</th>
            <th scope="1"></th>
          </tr>
        </thead>

        <tbody>
          <% informs.each do |inform| %>
            <tr>
              <td>
                <% if inform.inf_status == "anulado" %>
                  <del class="anulated">
                    <%= link_to inform  do %>
                      <%= inform.tag_code %>
                    <% end %>
                  </del>
                <% else %>
                  <%= link_to inform  do %>
                    <%= inform.tag_code %>
                  <% end %>
                <% end %>
                
              </td>
              <td><%= inform.inf_type %></td>
              <td><%= inform.receive_date.strftime('%d/%m/%Y') %></td>
              <td><%= User.where(id: inform.user_id).first.try(:first_name) %></td>
              <td>
                <%= link_to inform.patient  do %>
                  <%= inform.patient.name1 %> <%= inform.patient.name2 %> <%= inform.patient.lastname1 %> <%= inform.patient.lastname2 %>
                  <% end %>
              </td>
              <td><%= Promoter.where(id: inform.promoter_id).first.try(:initials) %></td>
              <td><%= Branch.where(id: inform.branch_id).first.try(:initials) %></td>
              <td><%= inform.prmtr_auth_code %></td>
              <% if inform.inf_status == "anulado" %>
                <td><%= link_to 'Restaurar', anulate_inform_path(inform), data: { confirm: '¿Confirmas la operación?' } %></td>
              <% else %>
                <td><%= link_to 'Anular', anulate_inform_path(inform), data: { confirm: '¿Confirmas la operación?' } %></td>
              <% end %>
              
            </tr>
          <% end %>
        </tbody>
      </table>
      <h3><%= @informs.count %> de <%= Inform.count %> registros FoxPro encontrados <%= new_search_range %></h3>
      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Informe</th>
            <th>Tipo</th>
            <th>Ingreso PSS</th>
            <th>User PSS</th>
            <th>Paciente</th>
            <th>EPS</th>
            <th>Sede IPS</th>
            <th>Código Authoriz.</th>
            <th scope="1"></th>
          </tr>
        </thead>

        <tbody>
          <% oldrecords.each do |oldrecord| %>
            <tr>
              <td>
                <%= link_to oldrecord  do %>
                  <%= oldrecord.tag_code %>
                <% end %>
              </td>
              <td><%= oldrecord.clave %></td>
              <td><%= oldrecord.fecharec.strftime('%d/%m/%Y') %></td>
              <td><%= oldrecord.secretaria %></td>
              <td>
                <% if oldrecord.patient_id %>
                  <%= link_to Patient.where(id: oldrecord.patient_id).first  do %>
                    <%= Patient.where(id: oldrecord.patient_id).first.fullname %>
                  <% end %>
                <% end %>
              </td>
              <td><%= oldrecord.entidad %></td>
              <td><%= oldrecord.clinica %></td>
              <td><%= oldrecord.autoriz %></td>
              
              
            </tr>
          <% end %>
        </tbody>
        <tbody>
          <% oldcitos.each do |oldcito| %>
            <tr>
              <td>
                <%= link_to oldcito  do %>
                  <%= oldcito.tag_code %>
                <% end %>
              </td>
              <td><%= oldcito.clave %></td>
              <td><%= oldcito.fecharec.strftime('%d/%m/%Y') %></td>
              <td><%= oldcito.secretaria %></td>
              <td>
                <%= link_to Patient.where(id: oldcito.patient_id).first  do %>
                  <%= Patient.where(id: oldcito.patient_id).first.fullname %>
                  <% end %>
              </td>
              <td><%= oldcito.entidad %></td>
              <td><%= oldcito.clinica %></td>
              <td><%= oldcito.autoriz %></td>
              
              
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
