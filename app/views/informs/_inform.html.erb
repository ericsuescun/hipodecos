<div class="info">
	<h4>
		<strong><%= @inform.tag_code %></strong>: <strong><%= @inform.patient.name1 %> <%= @inform.patient.name2 %> <%= @inform.patient.lastname1 %> <%= @inform.patient.lastname2 %></strong>, <strong><%= @inform.p_age %> <%= @inform.p_age_type == 'A' ? 'Años' : @inform.p_age_type == 'M' ? 'Meses' : 'Días' %></strong>, <%= @inform.patient.id_type %>: <strong><%= @inform.patient.id_number %> </strong>, fecha: <%= @inform.receive_date.strftime('%d/%m/%Y') %>
	</h4>
</div>
<div class="inform">
	<div class="row">
		 <div class="col-12 col-lg-6">
		 	<p>Teléfono: <strong><%= @inform.p_tel %></strong> - Celular: <strong><%= @inform.p_cel %></strong> - Dirección: <strong><%= @inform.p_address %> - </strong>Email: <strong><%= @inform.p_email %></strong> - Fecha de entrega: <strong><%= @inform.delivery_date %></strong> - EPS: <strong><%= Promoter.where(id: @inform.promoter_id).first.try(:initials) %></strong> - Sede IPS: <strong><%= Branch.where(id: @inform.branch_id).first.try(:initials) %></strong></p>
		 </div>
		 <div class="col-12 col-lg-6 d-flex justify-content-end align-items-start">
		 	<%= link_to 'Volver a informes', informs_path, class: "btn btn-primary mr-1" %>
		 	<%= link_to 'Editar informe ' + @inform.tag_code, edit_inform_path(@inform), class: "btn btn-primary mr-1" %>
		 	<%= link_to 'Previsualizar informe', preview_inform_path, class: "btn btn-primary mr-1" %>
		 </div>
	</div>
	

	<% @inform.physicians.each do |physician| %>
		<div>
			<strong>Médico tratante:</strong> <%= physician.name %> <%= physician.lastname %> - <strong>Contacto:</strong> <%= physician.tel %>, <%= physician.cel %>, <%= physician.email %> | <%= link_to 'Revisar', physician %> | <%= link_to 'Borrar', physician, method: :delete, data: { confirm: 'Are you sure?' } %>
		</div>
		
	<% end %>
	<%= link_to '+ Doctor', new_inform_physician_path(@inform) %>

</div>
