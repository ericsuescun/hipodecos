<div class="suggestions">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12 col-sm-12 col-lg-12">
        <% if inform.suggestions != [] %>
          <% suggestion = inform.suggestions.last %>
          <div class="card bg-light mx-2 mb-3">
            <div class="card-header pl-1 pr-0 pt-0 pb-0 d-flex justify-content-between">
              <div class="d-flex flex-row justify-content-between align-items-center">
                <p>Sugerencia producida el <%= suggestion.created_at.strftime('%d/%m/%Y') %></p>
              </div>
            </div>
            <div class="card-body">
              <p><%= suggestion.description %></p>
              <% suggestion.objections.each do |objection| %>
                <div>
                  <span class="badge badge-<%= objection.closed == false ? "danger" : "warning" %>">No conformidad: <%= objection_title(objection.obcode_id) %></span>
                </div>
                <div class="d-flex flex-column">
                  <span class="text-muted objection-description">
                    <%= objection.description %>
                  </span>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>