<div class="container-fluid">
  <div class="row">
    <div class="col-12 col-lg-12 mx-auto">
      <div class="alert alert-success">
        <h1>Informes</h1>
      </div>
      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Etiqueta</th>
            <th>Ingreso PSS</th>
            <th>User PSS</th>
            <th>Paciente</th>
            <th>EPS</th>
            <th>Sede IPS</th>
            <th>CÃ³digo Authoriz.</th>
          </tr>
        </thead>

        <tbody>
          <% @informs.each do |inform| %>
            <tr>
              <td>
                <%= link_to inform  do %>
                  <%= inform.tag_code %>
                <% end %>
              </td>
              <td><%= inform.created_at.strftime('%d/%m/%Y') %></td>
              <td><%= User.find(inform.user_id).first_name %></td>
              <td><%= inform.patient.name1 %> <%= inform.patient.name2 %> <%= inform.patient.lastname1 %> <%= inform.patient.lastname2 %></td>
              <td><%= Promoter.find(inform.promoter_id).initials %></td>
              <td><%= Branch.find(inform.branch_id).initials %></td>
              <td><%= inform.prmtr_auth_code %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
