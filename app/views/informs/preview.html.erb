<header>
  <%= link_to 'Editar informe ' + @inform.tag_code, edit_inform_path(@inform) %> |
  <%= link_to 'Volver a informes', informs_path %> |
  <%= link_to 'Volver a informe', inform_path(@inform) %> |
  <%= link_to 'Descargar en PDF', preview_inform_path(@inform, format: "pdf") %>
</header>
<div class="container">
  <div class="row">
    <div class="col-10 col-lg-10 mx-auto">
      <br>
      <div class="row d-flex flex-row">
        <div class="col-4 col-lg-4">
          <%= image_tag "logo.JPG", class: "img-fluid" %>
        </div>
        <div class="col-4 col-lg-4">
        </div>
        <div class="col-4 col-lg-4">
          <%= image_tag "datos.JPG", class: "img-fluid" %>
        </div>
      </div>
      <div class="row">
        <div class="col-4 col-lg-4 mx-auto">
          <strong>Informe número</strong> <%= @inform.tag_code %>
        </div>
      </div>
      
      <div class="row">
        <div class="col-6 col-lg-6">
          <strong>Paciente:</strong> <%= @inform.patient.name1 %> <%= @inform.patient.name2 %> <%= @inform.patient.lastname1 %> <%= @inform.patient.lastname2 %>
        </div>
        <div class="col-3 col-lg-3">
        </div>
        <div class="col-3 col-lg-3">
          <strong>Fecha de recibo:</strong> <%= @inform.receive_date.strftime('%d/%m/%Y') %>
        </div>
      </div>
      
      <div class="row">
        <div class="col-3 col-lg-3">
          <strong><%= @inform.patient.id_type %>:</strong> <%= @inform.patient.id_number %>
        </div>
        <div class="col-3 col-lg-3">
          <!-- <strong>Edad:</strong> <%= @inform.patient.age_number %> <%= @inform.patient.age_type == 'A' ? 'Años' : @inform.patient.age_type == 'M' ? 'Meses' : 'Días' %> -->
          <strong>Edad:</strong> <%= @inform.p_age %> <%= @inform.p_age_type == 'A' ? 'Años' : @inform.p_age_type == 'M' ? 'Meses' : 'Días' %>
        </div>
        <div class="col-3 col-lg-3">
          
        </div>
        <div class="col-3 col-lg-3">
          <strong>Fecha de informe:</strong> <%= @inform.delivery_date %>
        </div>
      </div>
      <div class="row">
        <div class="col-3 col-lg-3">
          <strong>Teléfono:</strong> <%= @inform.p_tel %>
        </div>
        <div class="col-3 col-lg-3">
          <strong>Celular:</strong> <%= @inform.p_cel %>
        </div>
        <div class="col-6 col-lg-6">
          <strong>Email:</strong> <%= @inform.p_email %>
        </div>
      </div>

      <div class="row">
        <div class="col-3 col-lg-3">
          <strong>Clínica:</strong> <%= Promoter.where(id: @inform.promoter_id).first.try(:initials) %>
        </div>
        <div class="col-4 col-lg-4">
          <strong>Entidad:</strong> <%= Branch.where(id: @inform.branch_id).first.try(:initials) %>
        </div>
      </div>

      <% if @inform.inf_type == 'cito' %>
        <div class="row">
          <% if @cytology != nil %>
            <div class="col-12 col-lg-3 col-xl-3">
              <strong>Emb:</strong> <%= @cytology.pregnancies %>
            </div>
            <div class="col-12 col-lg-3 col-xl-3">
              <strong>FUM:</strong> <%= @cytology.last_mens %>
            </div>
            <div class="col-12 col-lg-3 col-xl-3">
              <strong>Ult Cit:</strong> <%= @cytology.prev_appo %>
            </div>
          <% end %>
          <div class="col-12 col-lg-3 col-xl-3">
            <% if @inform.diagnostics != [] %>
              <strong>Resultado:</strong> <%= @inform.diagnostics.last.result %>
            <% end %>
          </div>
        </div>
      <% end %>

      <% @inform.physicians.each do |physician| %>
        <div class="row">
          <div class="col-6 col-lg-6">
            <strong>Doctor:</strong> <%= physician.name %> <%= physician.lastname %>
          </div>
        </div>
      <% end %>

      <div class="row">
        <div class="col-6 col-lg-6">
          <div><strong>Sede de entrega:</strong> <%= Branch.where(id: @inform.branch_id).first.try(:initials) %></div>
          <div><strong>Dirección:</strong> <%= Branch.where(id: @inform.branch_id).first.try(:address) %></div>
          
        </div>
        <% if @inform.inf_type == 'cito' %>
          <div class="col-6 col-lg-6">
            <% if @cytology != nil %>
              <strong>Fecha de muestra:</strong> <%= @cytology.sample_date %>
            <% end %>
          </div>
        <% end %>
      </div>    

      <br>

      <% if @inform.inf_type != 'cito' %>
        

        <div class="row">
          <div class="col-4 col-lg-4">
            <strong>Descripción Macroscópica</strong>
          </div>
        </div>

        <% @inform.recipients.each_with_index do |recipient, n| %>
          <div class="row">
            <div class="col-12 col-lg-12 col-xl-12">
              <div class="preview">
                <br>
                <div>
                  
                    Contenido de recipiente #<%= n + 1 %>:
                  
                </div>
                <div class="preview"><%= recipient.description %></div>
              </div>
              <div>Bloqueado de la siguiente manera:</div>
            </div>
          </div>
          <div class="row">
            <div class="col-12 col-lg-12 col-xl-12">
              <% Sample.where(recipient_tag: recipient.tag).each_with_index do |sample, i| %>
                <div class="preview ">
                  <%= sample.description %><%= sample.description == "" ? "" : ":" %> <%= sample.fragment %>F - <%= get_nomen(sample.sample_tag) %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>

      <br>
      <div class="row">
        <div class="col-12 col-lg-6 col-xl-6 mx-auto">
          <% if @inform.inf_type == 'cito' %>
            <h4>CITOLOGÍA CERVICO-UTERINA</h4>
            <h5>(INFORME TIPO BETHESDA 2001)</h5>
          <% end %>
        </div>
      </div>
      


      <% if @inform.inf_type != 'cito' %>
        <div class="row">
          <div class="col-4 col-lg-4 mb-3">
            <strong>Descripción Microscópica</strong>
          </div>
        </div>
        <% @inform.micros.each_with_index do |micro, n| %>
          <div class="row">
            <div class="col-12 col-lg-12 d-flex flex-row">
              <span class="d-flex"><%= micro.description %></span>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="row">
          <div class="col-12 col-lg-12">
            <strong>TIPO DE MUESTRA, CALIDAD DEL ESPECIMEN, CATEGORIZACIÓN Y DESCRIPCIÓN</strong>
          </div>
        </div>
        <div class="row">
          <div class="col-12 col-lg-12">
            <% if @inform.micros != [] %>
              <%= @inform.micros.last.description %>
            <% end %>
          </div>
        </div>
      <% end %>

      
      <% if @inform.inf_type != 'cito' %>
        <% @inform.micros.each_with_index do |micro, n| %>
          <div class="row">
            <div class="col-12 col-lg-12">
              <div class="row">
                <% micro.pictures.each do |picture| %>
                  <div class="col-4 col-lg-4 mx-auto">
                    <div class="card">
                      <%= link_to picture.name.url  do %>
                        <%= image_tag picture.name.url, class: "card-img-top" %>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <% if @inform.micros != [] %>
          <% micro = @inform.micros.last %>
          <div class="row">
            <div class="col-12 col-lg-12">
              <div class="row">
                <% micro.pictures.each do |picture| %>
                  <div class="col-4 col-lg-4 mx-auto">
                    <div class="card">
                      <%= link_to picture.name.url  do %>
                        <%= image_tag picture.name.url, class: "card-img-top" %>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>

      

      <div class="row diagnostic">
        <div class="col-12 col-lg-12">
          <div class="card mt-3">
            <div class="card-header text-center">
              <% if @inform.inf_type != 'cito' %>
                <strong>DIAGNÓSTICO Y PROCEDIMIENTOS</strong>
              <% else %>
                <strong>INTERPRETACIÓN Y RESULTADO</strong>
              <% end %>
              
            </div>
            <div class="card-body">
              <% if @inform.inf_type != 'cito' %>
                <% @inform.diagnostics.each do |diagnostic| %>
                  <h5 class="card-title"><strong><%= diagnostic.description %></strong></h5>
                <% end %>
                <div class="row d-flex flex-row">
                  <% @pathologists.each do |pathologist| %>
                    <div class="col-4 col-lg-4 mt-3">
                      <h5 class="card-title"><strong>Patólogo:</strong> <%= pathologist.first_name %> <%= pathologist.last_name %></h5>
                      <% if pathologist.signfile.file != nil %>
                        <%= image_tag pathologist.signfile.url, class: "img-fluid" %>
                      <% else %>
                        Sin archivo de firma!
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <% if @inform.diagnostics != [] %>
                  <% diagnostic = @inform.diagnostics.last %>
                  <h5 class="card-title"><strong><%= diagnostic.description %></strong></h5>
                  <div class="row d-flex flex-row">
                    <% @pathologists.each do |pathologist| %>
                      <div class="col-4 col-lg-4 mt-3">
                        <h5 class="card-title"><strong>Patólogo:</strong> <%= pathologist.first_name %> <%= pathologist.last_name %></h5>
                        <% if pathologist.signfile.file != nil %>
                          <%= image_tag pathologist.signfile.url, class: "img-fluid" %>
                        <% else %>
                          Sin archivo de firma!
                        <% end %>
                      </div>
                    <% end %>
                    <div class="col-4 col-lg-4 mt-3">
                      <h5 class="card-title"><strong>Citóloga:</strong> <%= @cytologist.fullname %></h5>
                      <% if @cytologist.signfile.file != nil %>
                        <%= image_tag @cytologist.signfile.url, class: "img-fluid" %>
                      <% else %>
                        Sin archivo de firma!
                      <% end %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
            <div class="card-footer text-muted d-flex justify-content-between">
              <div>
                <% if @inform.inf_type != 'cito' %>
                  <% @inform.diagnostics.each do |diagnostic| %>
                    <strong>Código:</strong> <%= diagnostic.pss_code %> <strong>DX:</strong> <%= diagnostic.who_code %>
                  <% end %>
                  <% if @inform.blocks.where(stored: true) != [] %>
                    Se guarda 
                    <% @inform.blocks.where(stored: true).each do |stored_block| %>
                      <strong><%= stored_block.block_tag %> </strong>
                    <% end %>
                  <% end %>
                <% else %>
                  <% if @inform.diagnostics != [] %>
                    <% diagnostic = @inform.diagnostics.last %>
                    <strong>Código:</strong> <%= diagnostic.pss_code %>
                  <% end %>
                  
                <% end %>
                
              </div>
              <div>
                <strong>Secretaria:</strong> <%= User.where(id: @inform.user_id).first.try(:fullname) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>