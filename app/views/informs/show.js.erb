$(document).on('page:load', refresh());

function refresh() {
	modalClose();
	
	console.log('Auto ejecutado!');
	$('div.recipients').remove();
	$('div.recipient').append('<%= j render "informs/recipients", inform: @inform, edit_sample_tag: "", edit_recipient_tag: "" %>');
	$('div.fast-bar').append('<%= j render "ok-executed" %>');
	setTimeout(function() {
		$('div.alert-growl').remove();
	}, 3000)
}