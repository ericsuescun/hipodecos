<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Invoice code</th>
      <th>Init date</th>
      <th>Final date</th>
      <th>Invoice date</th>
      <th>Entity</th>
      <th>Inf type</th>
      <th>Value</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.invoice_code %></td>
        <td><%= invoice.init_date %></td>
        <td><%= invoice.final_date %></td>
        <td><%= invoice.invoice_date %></td>
        <td><%= invoice.entity_id %></td>
        <td><%= invoice.inf_type %></td>
        <td><%= invoice.value %></td>
        <td><%= invoice.user_id %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

