<% if @block.errors.empty? %>
	$(document).on('page:load', refresh2());
	function refresh2() {

	  $('div.list-blocks').remove();
	  $('div.list-block').append('<%= j render "blocks/list-blocks", blocks: @blocks, informs: @informs, samplesc: @samplesc, edit_objection_id: nil %>');

	  
	  $('div.fast-bar').append('<%= j render "ok-message", message: "editado" %>');
	  setTimeout(function() {
	  	$('div.alert-growl').remove();
	  }, 3000)
	}
<% end %>
