$(document).on('page:load', refresh());

function refresh() {

	$('div.micros-out').remove();
	$('div.micros-in').append('<%= j render "informs/micros", inform: @inform, automatics: @automatics, edit_micro: @micro, edit_objeciton: nil %>');

	
	
	setTimeout(function() {
		$('div.alert-growl').remove();
	}, 3000)
}