<%= form_for [objectionable, objectionable.objections.build] do |form| %>
  
  <div class="form-group">
    <%= form.label "Título de NC" %>
    <%= form.select :name, Obcode.pluck(:title, :title), {prompt: "Selecciona la NC"}, class: "form-control input" %>
  </div>

  <div class="form-group">
    <%= form.label "Descripción de NC(solo si es necesario)" %>
    <%= form.text_area :description, class: "form-control input" %>
  </div>

  <div class="actions">
    <%= form.submit "Levantar No Conformidad", class: "btn btn-warning btn-block" %>
  </div>

<% end %>