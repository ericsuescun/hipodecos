<%= form_with(model: organ, local: true) do |form| %>
  
  <%= render "shared/error_messages", target: organ %>

  <div class="form-group">
    <%= form.label "Órgano" %>
    <%= form.text_field :organ, class: "form-control input", autofocus: true %>
  </div>

  <div class="form-group">
    <%= form.label "Código de órgano" %>
    <%= form.text_field :organ_code, class: "form-control input" %>
  </div>

  <div class="form-group">
    <%= form.label "Sistema" %>
    <%= form.text_field :part, class: "form-control input" %>
  </div>

  <div class="actions">
    <%= form.submit "Guardar", class: "btn btn-primary mb-2" %>
  </div>
<% end %>
