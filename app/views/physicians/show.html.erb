<%= link_to 'Editar doctor ' + @physician.name + " de informe " + take_inf.tag_code, edit_physician_path(@physician) %> |
<%= link_to 'Volver al informe', inform_path(@inf) %>

<div class="container-fluid">
  <div class="row">
    <div class="col-4 col-lg-4 offset-lg-2">
      <div class="alert alert-success">
        <h1>Doctor</h1>
        <fieldset disabled>
          <%= form_with(model: @physician, local: true) do |form| %>

            <div class="form-group">
              <%= form.label "Nombres" %>
              <%= form.text_field :name, class: "form-control input" %>
            </div>

            <div class="form-group">
              <%= form.label "Apellidos" %>
              <%= form.text_field :lastname, class: "form-control input" %>
            </div>

            <div class="form-group">
              <%= form.label "Teléfono" %>
              <%= form.text_field :tel, class: "form-control input" %>
            </div>

            <div class="form-group">
              <%= form.label "Celular" %>
              <%= form.text_field :cel, class: "form-control input" %>
            </div>

            <div class="form-group">
              <%= form.label "Email" %>
              <%= form.text_field :email, class: "form-control input" %>
            </div>

            <div class="form-group">
              <%= form.label "Especialidad" %>
              <%= form.text_field :study1, class: "form-control input" %>
            </div>

            <div class="form-group">
              <%= form.label "Otro estudio/especialidad" %>
              <%= form.text_field :study2, class: "form-control input" %>
            </div>
            <p class="text-muted">Creado por: <%= User.where(id: @physician.user_id).first.try(:email) %></p>
          <% end %>
        </fieldset>
      </div>
      
    </div>
    <div class="col-4 col-lg-4">
      <div class="alert alert-warning">
        <h1>Revisión</h1>
        <%= render partial: "objections/form", locals: { objectionable: @physician } %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-lg-12">
        <div class="alert alert-warning">
        <%= render partial: "objections/objections_list", locals: { objectionable: @physician } %>
      </div>
    </div>
  </div>
</div>



