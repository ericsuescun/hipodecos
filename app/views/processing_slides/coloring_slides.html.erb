<div class="inclusion-blocks">
  <div class="container-fluid">
    <%= form_tag color_slides_path + "?di=#{params[:di]}&mi=#{params[:mi]}&yi=#{params[:yi]}&df=#{params[:df]}&mf=#{params[:mf]}&yf=#{params[:yf]}", method: :put do %>
    <%= submit_tag "Colorear lo chequeado", class: "btn btn-danger btn-sm" %>
    <div class="row">
      <div class="col-12 col-lg-12 col-xl-12">
        <div class="row">
          
            <% @matrix.each do |col| %>
              <div class="col-12 col-lg-2 col-xl-2">
                <table class="table table-hover list-blocks">
                  <thead>
                    <tr>
                      <th>Color</th>
                      <th>CÃ³digo</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% col.each do |slide| %>
                      <% if get_nomen(slide.slide_tag) == "A" || get_nomen(slide.slide_tag) == "A1" %>
                        <tr class="inclusion-inform p-0 m-0">
                          <td class="m-0 p-0"><strong><span class="badge badge-dark"><%= slide.inform.tag_code %></strong></span><span class="badge badge-dark ml-1"><strong><%= slide.inform.slides.count %></strong></span></td>
                        </tr>
                      <% end %>
                      
                      <tr>
                        <% if !slide.colored %>
                          <td class="m-0 p-0"><%= check_box_tag "slide_ids[]", slide.id, checked: true %></td>
                        <% else %>
                          <td></td>
                        <% end %>
                        
                        <% if slide.colored %>
                          <td class="m-0 p-0 slide-colored">
                        <% else %>
                        <td class="m-0 p-0">
                        <% end %>
                          <%= slide.slide_tag %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            <% end %>

          
          

        </div>
      </div>
    </div>

    <% end %>
  </div>
</div>