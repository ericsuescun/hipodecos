<div class="container">
  <div class="row">
    <div class="col-12 col-lg-6 mx-auto">
      <%= form_with(model: promoter, local: true) do |form| %>
        <div class="form-group">
          <%= form.label "Nombre" %>
          <%= form.text_field :name, class: "form-control form-control-lg input" %>
        </div>

        <div class="form-group">
          <%= form.label "Siglas" %>
          <%= form.text_field :initials, class: "form-control form-control-lg input" %>
        </div>

        <div class="form-group">
          <%= form.label "Código" %>
          <%= form.text_field :code, class: "form-control form-control-lg input" %>
        </div>

        <div class="form-group">
          <%= form.label "Régimen" %>
          <%= form.select(:regime, options_for_select([['Contributivo', 'Contributivo'], ['Subsidiado', 'Subsidiado'], ['Particular', 'Particular'], ['Vinculado', 'Vinculado']], @promoter.regime), { include_blank: true }, class: "form-control form-control-lg input") %>
        </div>

        <div class="actions">
          <%= form.submit "Guardar", class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>
