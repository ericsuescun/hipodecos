<div class="container">
  <div class="row">
    <div class="col-12 col-lg-10 mx-auto">

      <h4>Importar datos</h4>
      <%= form_tag import_promoters_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag "Importar CSV" %>
      <% end %>

      <h1>Listado de EPS</h1>

      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Régimen</th>
            <th>Código</th>
            <th>Nombre</th>
            <th>Siglas</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @promoters.each do |promoter| %>
            <tr>
              <td><%= promoter.regime %></td>
              <td><%= promoter.code %></td>
              <td><%= promoter.name %></td>
              <td><%= promoter.initials %></td>
              <td><%= link_to 'Editar', edit_promoter_path(promoter) %></td>
              <td><%= link_to 'Borrar', promoter, method: :delete, data: { confirm: '¿Confirmas la acción?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

    </div>
  </div>
</div>
