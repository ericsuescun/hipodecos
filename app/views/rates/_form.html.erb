<div class="container">
  <div class="row">
    <div class="col-4 col-lg-4 mx-auto">
      <%= form_with(model: rate, local: true) do |form| %>

      <%= form.hidden_field :admin_id, value: current_admin.id %>

      <% if rate.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(rate.errors.count, "errores") %> impidieron guardar esta tabla de tarifas:</h2>

          <ul>
          <% rate.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

        <div class="form-group">
          <%= form.label "Nombre" %>
          <%= form.text_field :name, class: "form-control form-control-lg input" %>
        </div>

        <div class="form-group">
          <%= form.label "DescripciÃ³n" %>
          <%= form.text_area :description, class: "form-control form-control-lg input" %>
        </div>

        <div class="form-group">
          <%= form.label "Tabla de costo" %>
          <%= form.select :cost_id, Cost.pluck(:name, :id), {prompt:"Seleccione tabla de costo"}, class: "form-control form-control-lg input" %>
        </div>

        <div class="form-group">
          <%= form.label "\% incremento" %>
          <%= form.number_field :factor, step: :any, class: "form-control form-control-lg input" %>
        </div>

        <div class="actions">
          <%= form.submit "Guardar", class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>

    </div>
  </div>
</div>

