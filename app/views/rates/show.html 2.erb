<%= link_to 'Edit', edit_rate_path(@rate) %> |
<%= link_to 'Back', rates_path %>

<div class="container">
  <div class="row">
    <div class="col-12 col-lg-8 mx-auto">
      <div class="card text-center mt-3">
        <div class="card-header">
          Tarifa: <strong><%= @rate.name %></strong>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= Admin.find(@rate.admin_id).name %> definió en general un factor de: <%= @rate.factor %></h5>
          <p class="card-text"><%= @rate.description %></p>
        </div>
        <div class="card-footer text-muted">
        	Fecha de creación: <%= @rate.created_at %> - Fecha de modificación: <%= @rate.updated_at %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
  	<div class="col-12 col-lg-8 mx-auto">
  		<% @rate.factors.each do |factor| %>
  			<table class="table table-striped">
  				<thead class="thead-dark">
  					<tr>
  						<th>CUPS</th>
  						<th>Factor asociado</th>
  						<th>Asigando por:</th>
              <th>Comentarios</th>
  					</tr>
  					
  				</thead>
  				<tbody>
  					<tr>
  						<td><%= factor.codeval.code %></td>
  						<td><%= factor.factor %></td>
  						<td><%= Admin.find(factor.admin_id).name %></td>
              <td><%= factor.description %></td>
  					</tr>
  				</tbody>
  			</table>
  		<% end %>
  	</div>
  </div>
</div>