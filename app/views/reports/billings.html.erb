<div class="info">
	<h4>Facturación <%= params[:inf_type] == 'clin' ? "Clínicas" : params[:inf_type] == 'hosp' ? "Hospital" : "Citlogías" %> para el periodo <%= new_search_range %>: <strong><%= number_to_currency(@total_accumulated, precision: 0, delimiter: '.') %></strong></h4>
</div>
<div class="container">
	<div class="row">
	  <div class="col-12">
	  	
	    <div class="alert alert-secondary">
	    	<%= form_tag billings_reports_path, method: "get" do %>
	    		<%= hidden_field_tag :inf_type, value: params[:inf_type] %>
		        <div class="form-row">
		            <div class="form-group col-4">
		              <%= label_tag "Fecha inicial" %>
		              <%= date_field_tag :init_date, Date.parse(params[:init_date]), class: "form-control input" %>
		            </div>
		            <div class="form-group col-4">
		              <%= label_tag "Fecha final" %>
		              <%= date_field_tag :final_date, Date.parse(params[:final_date]), class: "form-control input" %>
		            </div>
			        <div class="col-4">
			        	<%= submit_tag("Buscar", class: "btn btn-primary") %>
			        </div>
		        </div>
	    	<% end %>
	    </div>
	  </div>
	</div>
	<div class="row">
		<div class="col-12 col-lg-12">
			<strong><h4>Reporte general de facturación</h4></strong>
			<table class="table">
				<thead>
					<tr>
						<th>IPS</th>
						<th>Factura</th>
					</tr>
				</thead>
				<tbody>
					<% @total_entities.each do |entity| %>
						<tr class="alert alert-primary">
							<td>
								<%= link_to "#{Entity.find(entity[0]).name}", show_billing_report_path(Entity.find(entity[0]), init_date: params[:init_date], final_date: params[:final_date], inf_type: params[:inf_type]) %>
								
							</td>
							<td>
								<%= number_to_currency(entity[1], precision: 0, delimiter: '.') %>
							</td>
						</tr>
					<% end %>
					
				</tbody>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="col-12 col-lg-12">
			<strong><h4>Reporte detallado de ventas</h4></strong>
			<table class="table">
				
				<tbody>
					<% @total_detail.each do |detail| %>
						<% if detail[2] == "++" %>
							<tr>
								<td></td>
								<td><h3><%= link_to "#{detail[0].name}", show_billing_report_path(detail[0], init_date: params[:init_date], final_date: params[:final_date], inf_type: params[:inf_type]) %></h3></td>
								
							</tr>
							<tr>
								<th>Informe</th>
								<th>Nombre</th>
								<th>Identif.</th>
								
								<th>CUP</th>
								
								<th>Precio total</th>
								<th>Saldo</th>
							</tr>
						<% else %>
							<% if detail[1] == "--" %>
								<tr class="alert alert-primary">
									<td></td>
									<td></td>
									<td></td>
									<td></td>
									
									<td>Total IPS</td>
									<td><%= number_to_currency(detail[7], precision: 0, delimiter: '.') %></td>
								</tr>
								<tr class="alert alert-light">
									<td></td>
									<td></td>
									<td></td>
									<td></td>
									
									<td></td>
									<td></td>
								</tr>
								<tr class="alert alert-light">
									<td></td>
									<td></td>
									<td></td>
									<td></td>
									
									<td></td>
									<td></td>
								</tr>
							<% else %>
								<% if detail[2] == "**" %>
									<tr class="alert alert-warning">
										<td></td>
										<td><%= detail[1] %></td>
										<td>Total sede</td>
										
										
										<td><%= number_to_currency(detail[6], precision: 0, delimiter: '.') %></td>
										<td>Acumulado IPS</td>
										<td><%= number_to_currency(detail[7], precision: 0, delimiter: '.') %></td>
									</tr>
									<tr class="alert alert-light">
									
									<td></td>
									<td></td>
									<td></td>
									<td></td>
									<td></td>
									<td></td>
									<td></td>
								</tr>
								<% else %>
									<tr>
										
										<td><%= link_to "#{detail[2].tag_code}", inform_path(detail[2]) %></td>
										<td><%= detail[2].patient.halfname %></td>
										<td><%= detail[2].patient.id_number %></td>
										<td>
											<% detail[3].each do |study| %>
												<strong>(<%= study.factor %>*)</strong><%= Codeval.find(study.codeval_id).code %>
											<% end %>
										</td>
										
										<td><%= number_to_currency(detail[6], precision: 0, delimiter: '.') %></td>
										<td><%= number_to_currency(detail[7], precision: 0, delimiter: '.') %></td>
									</tr>
								<% end %>
								
							<% end %>
						<% end %>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>