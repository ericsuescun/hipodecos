<div class="info">
	<h4>Facturaci√≥n para el periodo <%= new_search_range %>: <strong><%= number_to_currency(@total_accumulated, precision: 0, delimiter: '.') %></strong></h4>
</div>
<div class="container">
	<div class="row">
	  <div class="col-12">
	  	
	    <div class="alert alert-secondary">
	      <%= form_tag report_path(params[:id]), method: "get" do %>
	        <div class="form-row">
	            <div class="form-group col-4">
	              <%= label_tag "Fecha inicial" %>
	              <%= date_field_tag :init_date, class: "form-control input" %>
	            </div>
	            <div class="form-group col-4">
	              <%= label_tag "Fecha final" %>
	              <%= date_field_tag :final_date, class: "form-control input" %>
	            </div>
		        <div class="col-4">
		        	<%= submit_tag("Buscar", class: "btn btn-primary") %>
		        </div>
	          
	        </div>
	        
	      <% end %>
	    </div>
	  </div>
	</div>
	
	<div class="row">
		<div class="col-12 col-lg-12">
			<strong><h4>Reporte detallado de ventas</h4></strong>
			<h1><%= Entity.where(id: params[:id]).first.name %></h1>
			<table class="table">
				<thead>
					<tr>
						<th>IPS</th>
						<th>Sede</th>
						<th>Informe</th>
						<th>CUP</th>
						<th>Precio unitario</th>
						<th>Cant.</th>
						<th>Precio total</th>
						<th>Acumulado</th>
					</tr>
				</thead>
				<tbody>
					<% @total_detail.each do |detail| %>
						<% if detail[1] == "--" %>
							<tr class="alert alert-primary">
								<td><%= detail[0] %></td>
								<td></td>
								<td></td>
								<td></td>
								<td></td>
								<td></td>
								<td>Total IPS</td>
								<td><%= number_to_currency(detail[7], precision: 0, delimiter: '.') %></td>
							</tr>
						<% else %>
							<% if detail[2] == "**" %>
								<tr class="alert alert-warning">
									<td><%= detail[0] %></td>
									<td><%= detail[1] %></td>
									<td></td>
									<td></td>
									<td>Subtotal sede</td>
									<td><%= number_to_currency(detail[6], precision: 0, delimiter: '.') %></td>
									<td>Total IPS</td>
									<td><%= number_to_currency(detail[7], precision: 0, delimiter: '.') %></td>
								</tr>
								<tr class="alert alert-light">
									<td></td>
									<td></td>
									<td></td>
									<td></td>
									<td></td>
									<td></td>
									<td></td>
									<td></td>
								</tr>
							<% else %>
								<tr>
									<td><%= detail[0] %></td>
									<td><%= detail[1] %></td>
									<td><%= link_to "#{detail[2].tag_code}", inform_path(detail[2]) %></td>
									<td><%= detail[3] %></td>
									<td><%= number_to_currency(detail[4], precision: 0, delimiter: '.') %></td>
									<td><%= detail[5] %></td>
									<td><%= number_to_currency(detail[6], precision: 0, delimiter: '.') %></td>
									<td><%= number_to_currency(detail[7], precision: 0, delimiter: '.') %></td>
								</tr>
							<% end %>
							
						<% end %>
						
					<% end %>
					
				</tbody>
			</table>
		</div>
	</div>
</div>