<div class="container">
  <div class="row">
    <div class="col-12 col-lg-8 mx-auto">
      <%= form_with(model: role, local: true) do |form| %>
      <div class="row">
        <div class="col-12 col-lg-6 mx-auto">
          <div class="form-group">
            <%= form.label "Nombre del perfil" %>
            <%= form.text_field :name, class: "form-control form-control-lg input" %>
          </div>

          <div class="form-group">
            <%= form.label "Descripción del perfil" %>
            <%= form.text_area :description, class: "form-control form-control-lg input" %>
          </div>

          <div class="form-group">
            <%= form.label "Salario" %>
            <%= form.number_field :rate, class: "form-control form-control-lg input" %>
          </div>

          <div class="form-group">
            <%= form.label "Horas por mes" %>
            <%= form.number_field :time, class: "form-control form-control-lg input" %>
          </div>
        </div>

        <div class="col-12 col-lg-6 mx-auto">

          <div class="form-group">
            <%= form.label "Porcentaje asignado a salud" %>
            <%= form.number_field :health_care_rate, class: "form-control form-control-lg input" %>
          </div>

          <div class="form-group">
            <%= form.label "Porcentaje asignado a pensión" %>
            <%= form.number_field :pension_rate, class: "form-control form-control-lg input" %>
          </div>

          <div class="form-group">
            <%= form.label "Porcentaje asignado a parafiscales" %>
            <%= form.number_field :parafiscal_rate, class: "form-control form-control-lg input" %>
          </div>

        </div>
      </div>
       <div class="actions">
        <%= form.submit "Guardar", class: "btn btn-primary btn-block" %>
      </div>       
      <% end %>
    </div>
  </div>
</div>