<div class="container">
  <div class="row">
    <div class="col-12 col-lg-12">
      <h1>Perfiles</h1>
      <table class="table table-striped mx-3">
        <thead class="thead-dark">
          <tr>
            <th>Admin</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Salario</th>
            <th>Horas/mes</th>
            <th>Salud</th>
            <th>Pensión</th>
            <th>Parafiscales</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @roles.each do |role| %>
            <tr>
              <td><%= Admin.find(role.admin_id).email %></td>
              <td><%= role.name %></td>
              <td><%= role.description %></td>
              <td><%= number_to_currency(role.rate, precision: 0, delimiter: ',') %></td>
              <td><%= role.time %></td>
              <td><%= role.health_care_rate %>%</td>
              <td><%= role.pension_rate %>%</td>
              <td><%= role.parafiscal_rate %>%</td>
              <td><%= link_to 'Editar', edit_role_path(role) %></td>
              <td><%= link_to 'Borrar', role, method: :delete, data: { confirm: 'Confirmas el borrado?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

    </div>
  </div>
</div>