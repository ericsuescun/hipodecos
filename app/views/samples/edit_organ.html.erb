<h1>Edición de muestra: Órgano</h1>

<div class="container">
  <div class="row">
    <div class="col-4 col-lg-4 mx-auto">
      <h3><%= @sample.sample_tag %></h3>
      <%= form_with(model: @sample, url: update_organ_sample_path, local: true) do |form| %>

        <div class="form-group">
          <%= form.label "Órgano" %>
          <%= form.collection_select(:organ_code, @organs, :organ, :organ, { }, { class: "form-control input" }) %>
        </div>

        <div class="actions">
          <%= form.submit "Guardar", class: "btn btn-primary btn-block mb-3" %>
        </div>
      <% end %>

    </div>
  </div>
</div>

