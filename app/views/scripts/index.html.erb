<p id="notice"><%= notice %></p>

<h1>Scripts</h1>

<table>
  <thead>
    <tr>
      <th>Automatic</th>
      <th>Script type</th>
      <th>Description</th>
      <th>Organ</th>
      <th>Param1</th>
      <th>Param2</th>
      <th>Script order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scripts.each do |script| %>
      <tr>
        <td><%= script.automatic %></td>
        <td><%= script.script_type %></td>
        <td><%= script.description %></td>
        <td><%= script.organ %></td>
        <td><%= script.param1 %></td>
        <td><%= script.param2 %></td>
        <td><%= script.script_order %></td>
        <td><%= link_to 'Detalles', script %></td>
        <td><%= link_to 'Editar', edit_script_path(script) %></td>
        <td><%= link_to 'Borrar', script, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Script', new_script_path %>
