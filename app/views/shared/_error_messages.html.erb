<% if target.errors.any? %>
  <div id="error_explanation">
    <h2><%= target.errors.count %> error(es) impidieron que este registro fuera guardado:</h2>

    <ul>
      <% puts target.errors.inspect %>
    <% target.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>