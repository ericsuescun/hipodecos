<div class="container">
  <div class="row">
    <div class="col-12 col-lg-4 mx-auto">
      <%= form_with(model: slide, local: true) do |form| %>

        <div class="form-group">
          <%= form.label "Etiqueta" %>
          <%= form.text_field :slide_tag, class: "form-control input" %>
        </div>

        <div class="form-group">
          <%= form.label "Guardada" %>
          <%= form.check_box :stored, class: "form-control input" %>
        </div>

        <div class="actions">
          <%= form.submit "Guardar", class: "btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
