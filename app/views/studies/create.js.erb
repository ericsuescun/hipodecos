<% if @inform.errors.empty? %>
	$(document).on('page:load', refresh2());
	function refresh2() {
	  $('div.codevals').remove();
	  $('div.codeval').append('<%= j render "informs/codevals", inform: @inform, edit_study_form: nil, all_cups_price: @all_cups_price %>');
	  $('div.fast-bar').append('<%= j render "ok-message", message: "creado" %>');
	  setTimeout(function() {
	  	$('div.alert-growl').remove();
	  }, 3000)
	}
<% else %>
	$('div.fast-bar').append('<%= j render "error-message", message: "creado" %>');
	setTimeout(function() {
		$('div.alert-growl').remove();
	}, 3000)
<% end %>