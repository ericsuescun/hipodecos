<div class="container">
  <div class="row">
    <div class="col-12 col-lg-4 offset-lg-4">
      <%= form_with(model: template, local: true) do |form| %>
        <% if template.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(template.errors.count, "error") %> prohibited this template from being saved:</h2>

            <ul>
            <% template.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label "Título" %>
          <%= form.text_field :title, class: "form-control form-control input" %>
        </div>

        <div class="form-group">
          <!-- <%= form.label "Órgano" %> -->
          <!-- <%= form.text_field :organ, class: "form-control form-control input" %> -->
          <%= form.collection_select(:organ, Organ.all, :organ, :organ, {prompt: 'Seleccione órgano'}, { class: "form-control form-control input" }) %>
        </div>

        <div class="form-group">
          <!-- <%= form.label "Tipo de auto" %> -->
          <!-- <%= form.text_field :template_type %> -->
          <%= form.select(:template_type, options_for_select([['Macro', 'macro'], ['Micro', 'micro']], @template.template_type), { prompt: 'Tipo de auto' }, class: "form-control form-control input") %>
        </div>

        <div class="actions">
          <%= form.submit "Guardar", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

