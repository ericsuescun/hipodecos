<div class="contanier">
  <div class="row">
    <div class="col-12">
      <h1>Usuarios de Hipodecos</h1>
      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Tel√©fono</th>
            <th>Celular</th>
            <th>Activo</th>
            <th>Rol</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %>. <%= user.first_name %> <%= user.last_name %>: <%= user.active == true ? "Activo" : "No activo" %></td>
              <td><%= user.email %></td>
              <td><%= user.tel %></td>
              <td><%= user.cel %></td>
              <td></td>
              <td><%= Role.find(user.role_id.to_i).name %></td>
              <td><%= link_to 'Det.', user_path(user) %></td>
              <td><%= link_to 'User', edit_user_registration_path(user) %></td>
              <td><%= link_to 'Datos', edit_user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to 'Crear otro usuario', new_user_registration_path %>
    </div>
  </div>
</div>