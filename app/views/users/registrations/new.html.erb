<div class="contanier">
  <div class="row">
    <div class="col-sm-8 mx-auto">
      <h2>Registro de usuario</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="row mx-auto">
            <div class="col-sm-4 mx-auto">
              <div class="form-group">
                <%= f.label "Nombres" %><br />
                <%= f.text_field :first_name, autofocus: true, autocomplete: "Nombres", class: "form-control"  %>
              </div>
            </div>
            <div class="col-sm-4 mx-auto">
              <div class="form-group">
                <%= f.label "Apellidos" %><br />
                <%= f.text_field :last_name, autocomplete: "Apellidos", class: "form-control"  %>
              </div>
            </div>
            <div class="col-sm-4 mx-auto">
              <div class="form-group">
                <%= f.label "Rol" %><br />
                <%= f.text_field :role_id, autocomplete: "Rol", class: "form-control"  %>
              </div>
            </div>
          </div>

          <div class="row mx-auto">
            <div class="col-sm-4 mx-auto">
              <div class="form-group">
                <%= f.label "Dirección" %><br />
                <%= f.text_field :address, autocomplete: "Dirección", class: "form-control"  %>
              </div>
            </div>
            <div class="col-sm-4 mx-auto">
              <div class="form-group">
                <%= f.label "Teléfono" %><br />
                <%= f.text_field :tel, autocomplete: "Teléfono", class: "form-control"  %>
              </div>
            </div>
            <div class="col-sm-4 mx-auto">
              <div class="form-group">
                <%= f.label "Celular" %><br />
                <%= f.text_field :cel, autocomplete: "Celular", class: "form-control"  %>
              </div>
            </div>
          </div>

          <div class="row mx-auto">
            <div class="col-sm-4 mx-auto">
              <div class="form-group">
                <%= f.label "Cumpleaños" %><br />
                <%= f.date_select :birth_date, {order: [:day, :month, :year], prompt: { day: 'Día', month: 'Mes', year: 'Año' }, start_year: Date.today.year - 18, end_year: Date.today.year - 100}, class: "form-control" %>
              </div>
            </div>
            <div class="col-sm-4 mx-auto">
              <div class="form-group">
                <%= f.label "Fecha de ingreso" %><br />
                <%= f.date_field :join_date, autocomplete: "Ingreso", class: "form-control"  %>
              </div>
            </div>
            <div class="col-sm-4 mx-auto">
              <div class="form-group">
                <%= f.label "Fecha de salida" %><br />
                <%= f.date_field :deactivation_date, autocomplete: "Fecha de desactivación", class: "form-control"  %>
              </div>
            </div>
          </div>

          <div class="row mx-auto">
            <div class="col-sm-4 mx-auto">
              <div class="form-group">
                <%= f.label "Hoja de vida" %><br />
                <%= f.text_field :file_id, autocomplete: "Archivo", class: "form-control"  %>
              </div>
            </div>
            <div class="col-sm-4 mx-auto">
              <div class="form-group">
                <%= f.label "Último Admin" %><br />
                <%= f.text_field :last_admin_id, autocomplete: "Último Admin", class: "form-control"  %>
              </div>
            </div>
            <div class="col-sm-4 mx-auto">
              <div class="form-group">
                <%= f.label "Email alterno/personal" %><br />
                <%= f.email_field :email2, autocomplete: "email", class: "form-control"  %>
              </div>

            </div>
          </div>

          <div class="row mx-auto">
            <div class="col-sm-4 mx-auto">
              <div class="form-group">
                <%= f.check_box :active %>
                <%= f.label "Activo" %>
              </div>
            </div>
            <div class="col-sm-4 mx-auto">

            </div>
            <div class="col-sm-4 mx-auto">
              <div class="form-group">
                <%= f.label "Notas" %><br />
                <%= f.text_area :notes, autocomplete: "Notas", class: "form-control"  %>
              </div>
            </div>
          </div>


          <div class="row mx-auto">
            <div class="col-sm-4 mx-auto">

            </div>

            <div class="col-sm-4 mx-auto">
              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autocomplete: "email", class: "form-control"  %>
              </div>

              <div class="form-group">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control"  %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"  %>
              </div>
              <div class="actions">
                <%= f.submit "Registrar", class: "btn btn-primary btn-block mb-3" %>
              </div>
              <%= render "admins/shared/links" %>
              
            </div>

            <div class="col-sm-4 mx-auto">

            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>


