<% if admin_signed_in? %>
  <div class="contanier" data-no-turbolink>
    <div class="row">
      <div class="col-12 col-lg-8 mx-auto">
        <h2 class="edit-user">Registro de informción personal de <%= resource_name.to_s.humanize %></h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="alert alert-info">

            <div class="row mx-auto">
              <div class="col-sm-4 mx-auto">
                <div class="form-group">
                  <%= f.label "Nombres" %><br />
                  <%= f.text_field :first_name, autofocus: true, autocomplete: "Nombres", class: "form-control"  %>
                </div>
              </div>
              <div class="col-4 col-lg-4 mx-auto">
                <div class="form-group">
                  <%= f.label "Apellidos" %><br />
                  <%= f.text_field :last_name, autocomplete: "Apellidos", class: "form-control"  %>
                </div>
              </div>
              <div class="col-4 col-lg-4 mx-auto">
                <div class="form-group">
                  <%= f.label "Cargo" %><br />
                  <%= f.select :role_id, Role.pluck(:name, :id), {prompt:"Seleccione el cargo"}, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="row mx-auto">
              <div class="col-8 col-lg-4 mx-auto">
                <div class="form-group">
                  <%= f.label "Dirección" %><br />
                  <%= f.text_field :address, autocomplete: "Dirección", class: "form-control"  %>
                </div>
              </div>
              <div class="col-6 col-lg-4 mx-auto">
                <div class="form-group">
                  <%= f.label "Teléfono" %><br />
                  <%= f.text_field :tel, autocomplete: "Teléfono", class: "form-control"  %>
                </div>
              </div>
              <div class="col-6 col-lg-4 mx-auto">
                <div class="form-group">
                  <%= f.label "Celular" %><br />
                  <%= f.text_field :cel, autocomplete: "Celular", class: "form-control"  %>
                </div>
              </div>
            </div>

            <div class="row mx-auto">
              <div class="col-4 col-lg-4 mx-auto">
                <div class="form-group">
                  <%= f.label "Cumpleaños" %><br />
                  <%= f.date_field :birth_date, autocomplete: "Cumpleaños", class: "form-control"  %>
                </div>
              </div>
              <div class="col-4 col-lg-4 mx-auto">
                <div class="form-group">
                  <%= f.label "Fecha de ingreso" %><br />
                  <%= f.date_field :join_date, autocomplete: "Ingreso", class: "form-control"  %>
                </div>
              </div>
              <div class="col-4 col-lg-4 mx-auto">
                <div class="form-group">
                  <%= f.label "Fecha de salida" %><br />
                  <%= f.date_field :deactivation_date, autocomplete: "Fecha de desactivación", class: "form-control"  %>
                </div>
              </div>
            </div>

            <div class="row mx-auto">
              <div class="col-4 col-lg-4 mx-auto">
                <div class="form-group">
                  <%= f.label "Hoja de vida" %><br />
                  <%= f.text_field :file_id, autocomplete: "Archivo", class: "form-control"  %>
                </div>
              </div>
              <div class="col-4 col-lg-4 mx-auto">
                <div class="form-group">
                  <%= f.label "Último Admin" %><br />
                  <%= f.text_field :last_admin_id, autocomplete: "Último Admin", class: "form-control"  %>
                </div>
              </div>
              <div class="col-4 col-lg-4 mx-auto">
                <div class="form-group">
                  <%= f.label "Email alterno/personal" %><br />
                  <%= f.email_field :email2, autocomplete: "email", class: "form-control"  %>
                </div>

              </div>
            </div>

            <div class="row mx-auto">
              <div class="col-4 col-lg-4 mx-auto">
                <div class="form-group">
                  <%= f.check_box :active %>
                  <%= f.label "Activo" %>
                </div>
              </div>

              <div class="col-4 col-lg-4 mx-auto">

              </div>

              <div class="col-4 col-lg-4 mx-auto">
                <div class="form-group">
                  <%= f.label "Notas" %><br />
                  <%= f.text_area :notes, autocomplete: "Notas", class: "form-control"  %>
                </div>
              </div>
            </div>

          </div>
      </div>
      <div class="col-6 col-lg-3 mx-auto">
        <h2 class="edit-user">Guardar</h2>
        <div class="alert alert-warning">
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autocomplete: "email", class: "form-control"  %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control"  %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"  %>
          </div>
          <div class="actions">
            <%= f.submit "Guardar", class: "btn btn-primary btn-block mb-3" %>
          </div>
          
        <% end %> <!-- Los estilos estan traslapados con el bloque de la form, por eso deje la identación así. -->
        <%= render "admins/shared/links" %>
        </div>
      </div>


      </div>
    </div>
  </div>
<% end %>



