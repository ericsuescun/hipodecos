<div class="container">
  <div class="row">
    <div class="col-6">
      <h1>Archivos para descarga</h1>
      <%= link_to 'Borrar todos', destroy_all_utility_files_path %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Link</th>
            <th>Descripción</th>
            <th colspan="1"></th>
          </tr>
        </thead>

        <tbody>
          <% @utility_files.each do |utility_file| %>
            <tr>
              <td><%= utility_file.name %></td>
              <td><%= link_to 'Descarga', download_utility_file_path(utility_file) %></td>
              <td><%= utility_file.description %></td>
              <td><%= link_to 'Borrar', utility_file, method: :delete, data: { confirm: 'Estás seguro?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
  </div>
</div>
